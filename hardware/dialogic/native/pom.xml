<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.mobicents.protocols.ss7.hardware</groupId>
		<artifactId>mobicents-dialogic-parent</artifactId>
		<version>2.0.0.19</version>
	</parent>

	<artifactId>mobicents-dialogic-native</artifactId>

	<packaging>pom</packaging>

	<name>Mobicents SS7 :: Hardware :: ${project.artifactId}</name>
	<!-- Note : Supports only 32 bit -->
	<properties>
		<maven.test.skip>true</maven.test.skip>
	</properties>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>dialogicwin</id>
			<activation>
				<property>
					<name>platform</name>
					<value>win32</value>
				</property>
			</activation>
			<modules>
				<module>win</module>
			</modules>
		</profile>
		<!-- <profile> <id>solaris</id> <activation> <property> <name>platform</name> 
			<value>solaris</value> </property> </activation> <modules> <module>solaris</module> 
			</modules> </profile> -->
		<profile>
			<id>dialogiclinux</id>
			<activation>
				<property>
					<name>platform</name>
					<value>linux</value>
				</property>
			</activation>
			<modules>
				<module>linux</module>
			</modules>
		</profile>
		<profile>
			<id>maven-release</id>
			<modules>
				<!-- this depends on dialogic files and we dont have it -->
				<module>linux</module>

			</modules>
		</profile>
		<profile>
			<id>release</id>
			<modules>
				<!-- this depends on dialogic files and we dont have it <module>linux</module> -->
			</modules>
		</profile>
	</profiles>

</project>
